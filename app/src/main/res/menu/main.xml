<?xml version="1.0" encoding="utf-8"?>

<!-- the menu in the MainActivity, where user can sort by popularity or top_rated -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <group android:checkableBehavior="single">
        <item
            android:id="@+id/sorty_by_popular"
            android:checked="true"
            android:orderInCategory="1"
            android:title="@string/menu_popular"
            app:showAsAction="never" />

        <item
            android:id="@+id/sort_by_top_rated"
            android:orderInCategory="2"
            android:title="@string/menu_top_rated"
            app:showAsAction="never" />
    </group>
</menu>

